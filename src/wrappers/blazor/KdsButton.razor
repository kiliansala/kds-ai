<kds-button
    appearance="@Appearance"
    state="@State"
    has-icon="@(HasIcon ? "" : null)"
    label="@Label"
    icon="@Icon"
    href="@Href"
    type="@Type"
    @onkds-click="OnKdsClickHandler">
    @ChildContent
</kds-button>

@code {
    /// <summary>
    /// Visual appearance variant (Material Design 3)
    /// Default: "filled"
    /// </summary>
    [Parameter]
    public string Appearance { get; set; } = "filled";

    /// <summary>
    /// Interaction state
    /// Default: "enabled"
    /// </summary>
    [Parameter]
    public string State { get; set; } = "enabled";

    /// <summary>
    /// Whether to show icon slot (maps to has-icon attribute)
    /// Default: false
    /// </summary>
    [Parameter]
    public bool HasIcon { get; set; } = false;

    /// <summary>
    /// Button text label
    /// Default: ""
    /// </summary>
    [Parameter]
    public string Label { get; set; } = "";

    /// <summary>
    /// Material Symbols icon name (e.g., "add", "delete")
    /// Default: "add"
    /// </summary>
    [Parameter]
    public string Icon { get; set; } = "add";

    /// <summary>
    /// Optional URL; when set, button renders as &lt;a&gt; tag (semantic link)
    /// Default: null
    /// </summary>
    [Parameter]
    public string? Href { get; set; }

    /// <summary>
    /// Form button type
    /// Default: "button"
    /// </summary>
    [Parameter]
    public string Type { get; set; } = "button";

    /// <summary>
    /// Projected content for default slot (button text) and icon slot
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Callback when button is clicked
    /// Receives CustomEventArgs with detail: { originalEvent: PointerEvent }
    /// Event bubbles and is composed
    /// </summary>
    [Parameter]
    public EventCallback<CustomEventArgs> OnKdsClick { get; set; }

    private async Task OnKdsClickHandler(CustomEventArgs e)
            await OnKdsClick.InvokeAsync(e);
        }
    }
}
